PATH=/sbin:/bin:/usr/sbin:/usr/bin

. /lib/lsb/init-functions

do_start() {
  <%= @prefix %>/caimito/bin/demon.sh
}

do_stop()  {
  do_status && <%= @prefix %>/caimito/bin/shutdown.sh && sleep 2
  do_status && <%= @prefix %>/caimito/bin/shutdown.sh && sleep 5
  ! do_status || killall java
}

do_status(){
  ps ax|grep -s <%= @prefix %>/caimito/| grep -qsv grep
}

case "$1" in
start)
 do_start || (do_stop && false) ;;
restart|reload|force-reload)
 do_stop; do_start ;;
stop)
 do_stop ;;
status)
  if do_status; then echo "running..."; else  echo "stopped..."; false; fi;;
*)
 echo "Syntaxe: $(basename $0) [start|stop]..." && false
esac

